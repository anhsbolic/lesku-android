<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selama "
                android:textColor="@color/colorTextGray"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"/>

            <EditText
                android:id="@+id/setRepetitionEtWeeks"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorTextGray"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                tools:ignore="LabelFor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minggu"
                android:textColor="@color/colorTextGray"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/setRepetitionTxtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setiap Hari :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextGray"
            android:layout_marginBottom="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLineSeparator"/>

        <RelativeLayout
            android:id="@+id/setRepetitionMondayLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/setRepetitionCbMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/setRepetitionTxtMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senin"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/setRepetitionCbMonday"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLineSeparator"/>

        <RelativeLayout
            android:id="@+id/setRepetitionTuesdayLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/setRepetitionCbTuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/setRepetitionTxtTuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selasa"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/setRepetitionCbTuesday"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLineSeparator"/>

        <RelativeLayout
            android:id="@+id/setRepetitionWednesdayLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/setRepetitionCbWednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/setRepetitionTxtWednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rabu"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/setRepetitionCbWednesday"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLineSeparator"/>

        <RelativeLayout
            android:id="@+id/setRepetitionThursdayLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/setRepetitionCbThursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/setRepetitionTxtThursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kamis"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/setRepetitionCbThursday"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLineSeparator"/>

        <RelativeLayout
            android:id="@+id/setRepetitionFridayLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/setRepetitionCbFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/setRepetitionTxtFriday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumat"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/setRepetitionCbFriday"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLineSeparator"/>

        <RelativeLayout
            android:id="@+id/setRepetitionSaturdayLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/setRepetitionCbSaturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/setRepetitionTxtSaturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sabtu"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/setRepetitionCbSaturday"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLineSeparator"/>

        <RelativeLayout
            android:id="@+id/setRepetitionSundayLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true">

            <CheckBox
                android:id="@+id/setRepetitionCbSunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/setRepetitionTxtSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minggu"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/setRepetitionCbSunday"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLineSeparator"/>

        <Button
            android:id="@+id/setRepetitionBtnSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Pengulangan Jadwal"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:theme="@style/PrimaryButton"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>