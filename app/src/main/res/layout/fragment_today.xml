<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.lesku.lesku.fragment.TodayFragment">

    <ImageView
        android:id="@+id/todayImgPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_today"
        tools:ignore="ContentDescription"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/todayTxtPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_placeholder"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPlaceholder"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/todayImgPlaceholder"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/dashboardFabSellProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/fab_add"
        app:fabSize="auto"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/colorPrimaryDark"/>

</RelativeLayout>
