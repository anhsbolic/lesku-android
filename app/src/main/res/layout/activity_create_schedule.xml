<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="id.lesku.lesku.activity.CreateScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:contentPadding="10dp"
            app:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextInputLayoutStyle"
                    android:layout_marginBottom="10dp"
                    app:hintEnabled="true">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/createScheduleSearchAutoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Siswa"
                        android:textSize="14sp"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:imeOptions="actionNext"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/createScheduleTxtAddressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextInputLayoutStyle"
                    android:layout_marginBottom="10dp"
                    app:hintEnabled="true"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/createScheduleTxtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat Rumah"
                        android:textSize="14sp"
                        android:enabled="false"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextInputLayoutStyle"
                    android:layout_marginBottom="10dp"
                    app:hintEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/createScheduleTxtAnotherAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat Belajar (Kosongkan bila belajar di rumah)"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:imeOptions="actionDone"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/createScheduleCvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:contentPadding="10dp"
            app:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/createScheduleStartDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/createScheduleTxtStartDateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Mulai :"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_date"
                        android:drawablePadding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/createScheduleTxtStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pilih tanggal"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        android:layout_toEndOf="@id/createScheduleTxtStartDateTitle"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selama :"
                        android:textColor="@color/colorTextGray"
                        android:textSize="14sp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="textStart"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/createScheduleEtWeeks"/>

                    <EditText
                        android:id="@+id/createScheduleEtWeeks"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/colorTextGray"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginEnd="5dp"
                        android:imeOptions="actionDone"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/createScheduleTxtWeeks"
                        tools:ignore="LabelFor"/>

                    <TextView
                        android:id="@+id/createScheduleTxtWeeks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="minggu"
                        android:textColor="@color/colorTextGray"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/createScheduleTxtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setiap Hari :"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextGray"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleMondayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <CheckBox
                        android:id="@+id/createScheduleCbMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/createScheduleTxtMonday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Senin"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/createScheduleCbMonday"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleTuesdayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <CheckBox
                        android:id="@+id/createScheduleCbTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/createScheduleTxtTuesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selasa"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/createScheduleCbTuesday"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleWednesdayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <CheckBox
                        android:id="@+id/createScheduleCbWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/createSchedulextWednesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rabu"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/createScheduleCbWednesday"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleThursdayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <CheckBox
                        android:id="@+id/createScheduleCbThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/createScheduleTxtThursday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kamis"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/createScheduleCbThursday"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleFridayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <CheckBox
                        android:id="@+id/createScheduleCbFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/setRepetitionTxtFriday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jumat"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/createScheduleCbFriday"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleSaturdayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <CheckBox
                        android:id="@+id/createScheduleCbSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/createScheduleTxtSaturday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sabtu"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/createScheduleCbSaturday"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleSundayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <CheckBox
                        android:id="@+id/createScheduleCbSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/setRepetitionTxtSunday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minggu"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextGray"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/createScheduleCbSunday"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/createScheduleCvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="20dp"
            app:contentPaddingLeft="15dp"
            app:contentPaddingRight="15dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/createScheduleStartTimeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/createScheduleTxtStartTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mulai"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_clock"
                        android:drawablePadding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/createScheduleTxtStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pilih waktu mulai"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        android:layout_toEndOf="@id/createScheduleTxtStartTimeTitle"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleEndTimeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/createScheduleTxtEndTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_clock"
                        android:drawablePadding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/createScheduleTxtEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pilih waktu selesai"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        android:layout_toEndOf="@id/createScheduleTxtEndTimeTitle"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleReminderAlarmLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/createScheduleTxtReminderAlarmTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_add_alarm"
                        android:drawablePadding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/createScheduleTxtReminderAlarmTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="set alarm"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        android:layout_toEndOf="@id/createScheduleTxtReminderAlarmTitle"
                        android:layout_toStartOf="@id/createScheduleBtnReminderReset"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/createScheduleBtnReminderReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clear_red"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        tools:ignore="ContentDescription"
                        android:layout_marginStart="15dp"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:contentPaddingLeft="15dp"
            app:contentPaddingRight="15dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:id="@+id/createScheduleAddNotesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan keterangan/ mata pelajaran/ matkul"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_add"
                    android:drawablePadding="5dp"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/createScheduleRvDailyNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
