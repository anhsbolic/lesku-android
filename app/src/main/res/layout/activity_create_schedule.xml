<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    tools:context="id.lesku.lesku.activity.CreateScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:contentPadding="10dp"
            app:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextInputLayoutStyle"
                    android:layout_marginBottom="10dp"
                    app:hintEnabled="true">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/createScheduleSearchAutoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Siswa"
                        android:textSize="14sp"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:imeOptions="actionNext"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/createScheduleTxtAddressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextInputLayoutStyle"
                    android:layout_marginBottom="10dp"
                    app:hintEnabled="true"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/createScheduleTxtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat Rumah"
                        android:textSize="14sp"
                        android:enabled="false"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextInputLayoutStyle"
                    android:layout_marginBottom="10dp"
                    app:hintEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/createScheduleTxtAnotherAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat Belajar (Kosongkan bila belajar di rumah)"
                        android:textSize="14sp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextInputLayoutStyle"
                    android:layout_marginBottom="10dp"
                    app:hintEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/createScheduleTxtNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Keterangan"
                        android:textSize="14sp"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/createScheduleCvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="20dp"
            app:contentPaddingLeft="15dp"
            app:contentPaddingRight="15dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/createScheduleDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/createScheduleTxtDateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hari/Tanggal"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/createScheduleTxtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pilih tanggal"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        android:drawableEnd="@drawable/ic_date"
                        android:drawablePadding="10dp"
                        android:layout_toEndOf="@id/createScheduleTxtDateTitle"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleStartTimeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/createScheduleTxtStartTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mulai"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/createScheduleTxtStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pilih waktu mulai"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        android:drawableEnd="@drawable/ic_clock"
                        android:drawablePadding="10dp"
                        android:layout_toEndOf="@id/createScheduleTxtStartTimeTitle"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleEndTimeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/createScheduleTxtEndTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/createScheduleTxtEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pilih waktu selesai"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        android:drawableEnd="@drawable/ic_clock"
                        android:drawablePadding="10dp"
                        android:layout_toEndOf="@id/createScheduleTxtEndTimeTitle"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleReminderAlarmLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/createScheduleTxtReminderAlarmTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/createScheduleTxtReminderAlarmTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="set alarm"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        android:drawableEnd="@drawable/ic_add_alarm"
                        android:drawablePadding="10dp"
                        android:layout_toEndOf="@id/createScheduleTxtReminderAlarmTitle"
                        android:layout_toStartOf="@id/createScheduleBtnReminderReset"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/createScheduleBtnReminderReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clear_red"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        tools:ignore="ContentDescription"
                        android:layout_marginStart="15dp"
                        android:visibility="gone"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLineSeparator"/>

                <RelativeLayout
                    android:id="@+id/createScheduleRepetitionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/createScheduleTxtRepetitionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengulangan"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/createScheduleTxtRepetition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="set pengulangan"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        android:drawableEnd="@drawable/ic_repeat"
                        android:drawablePadding="10dp"
                        android:layout_toEndOf="@id/createScheduleTxtRepetitionTitle"
                        android:layout_toStartOf="@id/createScheduleBtnRepetitionReset"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:id="@+id/createScheduleBtnRepetitionReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clear_red"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        tools:ignore="ContentDescription"
                        android:layout_marginStart="15dp"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/createScheduleBtnSave"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Simpan"
            android:textSize="16sp"
            android:theme="@style/PrimaryButton"/>

    </LinearLayout>

</ScrollView>
