<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.lesku.lesku.fragment.StudentsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/studentsRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:paddingBottom="80dp"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/studentsImgPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_students"
        tools:ignore="ContentDescription"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/studentsTxtPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/students_placeholder"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPlaceholder"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/studentsImgPlaceholder"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/studentsFabAddStudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/fab_add"
        app:fabSize="auto"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/colorPrimaryDark"/>

</RelativeLayout>
