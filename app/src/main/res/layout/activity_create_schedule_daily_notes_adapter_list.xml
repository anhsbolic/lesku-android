<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/createScheduleDailyNotesAdapterListTxtDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/createScheduleDailyNotesAdapterListEtSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:hint="Mata Pelajaran/Mata Kuliah"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/createScheduleDailyNotesAdapterListEtNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:hint="Keterangan"
        android:inputType="text"
        android:layout_marginBottom="20dp"/>

</LinearLayout>